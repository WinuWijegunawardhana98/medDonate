<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prescription_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:fontFamily="serif"
        android:text="Prescription ID"
        android:textColor="@color/white"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/prescription_crud_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="serif"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/prescription_crud_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="serif"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/prescription_crud_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="1sp"
        android:fontFamily="serif"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/prescription_crud_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:fontFamily="serif"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:src="@drawable/placeholder_prescription"/>

    <TextView
        android:id="@+id/prescription_crud_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:paddingEnd="16dp" />

    <TextView
        android:id="@+id/prescription_Status_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:fontFamily="serif"
        android:text="Prescription not yet accepted"
        android:textColor="@color/DarkRed"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/prescription_Status_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:fontFamily="serif"
        android:text="Prescription accepted by pharmacy"
        android:textColor="@color/DarkRed"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/prescription_Status_requesr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:fontFamily="serif"
        android:text="Waiting for a donor"
        android:textColor="@color/DarkRed"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/prescription_Status_donarAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:fontFamily="serif"
        android:text="A donor has accepted your donation request."
        android:textColor="@color/DarkRed"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
        android:id="@+id/prescription_crud_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="serif"
        android:paddingStart="16dp"
            android:textSize="12dp"
        android:paddingTop="8dp"
            android:layout_marginEnd="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Update"/>

        <Button
            android:id="@+id/prescription_crud_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="16dp"
            android:background="@drawable/btn_red_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:fontFamily="serif"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Delete"/>

        <Button
            android:id="@+id/prescription_crud_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:paddingStart="16dp"
            android:textSize="12dp"
            android:paddingTop="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:text="Request for donar"/>

    </LinearLayout>


</LinearLayout>